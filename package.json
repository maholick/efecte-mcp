{
  "name": "efecte-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol (MCP) server for integrating AI assistants with Efecte/Matrix42 Service Management systems. Provides comprehensive tools for managing incidents, service requests, problems, and other service management entities through natural language interactions. Supports both STDIO and HTTP transport modes with full CRUD operations, file attachments, and advanced EQL filtering.",
  "author": {
    "name": "Shawn Maholick",
    "url": "https://www.maholick.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maholick/efecte-mcp.git"
  },
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/start-http.ts",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js",
    "start:http": "./start-http-server.sh",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "efecte",
    "esm",
    "api",
    "server"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^7.5.0",
    "form-data": "^4.0.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.29.0",
    "tsx": "^4.2.0",
    "typescript": "^5.9.0"
  }
}